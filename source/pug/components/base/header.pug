mixin header(headerMods, currentUrl)
  -
    const headerLinks = [
      {
        href: "index.html",
        text: "Бизнес"
      },
      {
        href: "about.html",
        text: "О нас"
      },
      {
        href: "price.html",
        text: "Цены"
      },
      {
        href: "create-order.html",
        text: "Оформить заказ"
      }
    ]

  header.header(class=headerMods)
    .container
      if(currentUrl === "index.html")
        //- lighthouse снимает 10 баллов SEO за <a> без href
        span.header__logo LoremIpsum
          span.header__logo-colored .Net
      else
        a.header__logo(href="index.html", aria-label="Переход на главную") LoremIpsum
          span.header__logo-colored .Net
      nav.main-nav
        button.main-nav__toggle.btn-reset(type="button", aria-label="Переключатель отображения меню", aria-pressed="false")
          +icon("icon-burger", 20, 20).burger
          +icon("icon-close",20,20).close.visibility-hidden
        .main-nav__wrapper
          ul.main-nav__list
            each link in headerLinks
              - const activeState = currentUrl === link.href
              li.main-nav__item
                if(activeState)
                  span.main-nav__link.is-active=link.text
                else
                  a.main-nav__link(href=link.href)=link.text
